    </sourceDataStores>
    <targetTypes>
        <FeatureType>
            <schemaUri>http://schemas.ga.gov.au/geodesyml/0.3/geodesyML.xsd</schemaUri>
        </FeatureType>
    </targetTypes>
    <typeMappings>
        <FeatureTypeMapping>
            <sourceDataStore>datastore</sourceDataStore>
            <sourceType>v_cors_site</sourceType>
            <targetElement>geo:Site</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>
                        geo:Site
                    </targetAttribute>
                    <idExpression>
                        <OCQL>strConCat('Site.',id)</OCQL>
                    </idExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        gml:identifier
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>four_character_id</OCQL>
                    </sourceExpression>
                    <ClientProperty>
                        <name>codeSpace</name>
                        <value>'urn:xml-gov-au:icsm:egeodesy:0.3:SiteIdentifier'</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        gml:name
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>name</OCQL>
                    </sourceExpression>
                    <ClientProperty>
                        <name>codeSpace</name>
                        <value>'urn:xml-gov-au:icsm:egeodesy:0.3:SiteName'</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        geo:type
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>'CORS'</OCQL>
                    </sourceExpression>
                    <ClientProperty>
                        <name>codeSpace</name>
                        <value>'urn:xml-gov-au:icsm:egeodesy:0.3:SiteType'</value>
                    </ClientProperty>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>
    </typeMappings>
</as:AppSchemaDataAccess>
